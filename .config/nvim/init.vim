" color scheme
colorscheme monotone

" enable hybrid line number
set number relativenumber

" highlight cursor line
set cursorline

" indentation
set autoindent
set expandtab
set shiftround
set shiftwidth=4
set tabstop=4
set smarttab

" search
set ignorecase
set incsearch
set smartcase
nohlsearch

" text rendering
set encoding=utf-8
set linebreak
set scrolloff=1
set wrap
syntax enable

" misc
set confirm

